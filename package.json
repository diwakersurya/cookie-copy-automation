{
  "name": "cookie-copy",
  "version": "1.0.0",
  "description": "Monorepo for Cookie Copy CLI and Browser Extension",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "ext:build": "node tools/build-extension.js",
    "ext:dev": "node tools/build-extension.js --watch",
    "cli:dev": "pnpm --filter @cookie-copy/cli dev",
    "cli:test": "pnpm --filter @cookie-copy/cli test",
    "ext:create-icons": "node tools/create-icons.js"
  },
  "keywords": [
    "cli",
    "cookie",
    "chrome",
    "cdp",
    "playwright",
    "automation",
    "browser-extension",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cookie-copy.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/cookie-copy/issues"
  },
  "homepage": "https://github.com/yourusername/cookie-copy#readme"
}
